<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <include
        android:id="@+id/titleLayout"
        layout="@layout/view_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/topView"
        android:layout_width="@dimen/MyDimen0dp"
        android:layout_height="@dimen/MyDimen61dp"
        android:layout_marginTop="@dimen/MyDimen8dp"
        android:background="@color/whiteColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titleLayout" />

    <ImageView
        android:id="@+id/phoneIcon"
        android:layout_width="@dimen/MyDimen26dp"
        android:layout_height="@dimen/MyDimen36dp"
        android:layout_marginLeft="@dimen/MyDimen18dp"
        android:layout_marginStart="@dimen/MyDimen18dp"
        android:src="@mipmap/phone"
        app:layout_constraintBottom_toBottomOf="@+id/topView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/topView" />

    <EditText
        android:id="@+id/phoneEditText"
        android:layout_width="@dimen/MyDimen105dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MyDimen20dp"
        android:layout_marginStart="@dimen/MyDimen20dp"
        android:background="@null"
        android:hint="@string/phoneToast"
        android:inputType="phone"
        android:maxLength="11"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/secondTextColor"
        android:textSize="@dimen/mainFontSize"
        app:layout_constraintBottom_toBottomOf="@+id/phoneIcon"
        app:layout_constraintLeft_toRightOf="@+id/phoneIcon"
        app:layout_constraintTop_toTopOf="@+id/phoneIcon" />

    <Button
        android:id="@+id/vertifyCodeBtn"
        android:layout_width="@dimen/MyDimen76dp"
        android:layout_height="@dimen/MyDimen24dp"
        android:layout_marginEnd="@dimen/MyDimen16dp"
        android:layout_marginRight="@dimen/MyDimen16dp"
        android:background="@drawable/btn_bg_white"
        android:text="@string/receiveCode"
        android:textColor="@color/secondTextColor"
        android:textSize="@dimen/secondFontSize"
        app:layout_constraintBottom_toBottomOf="@+id/phoneIcon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/phoneIcon" />

    <View
        android:id="@+id/bottomView"
        android:layout_width="@dimen/MyDimen0dp"
        android:layout_height="@dimen/MyDimen61dp"
        android:layout_marginTop="@dimen/MyDimen1dp"
        android:background="@color/whiteColor"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topView" />

    <ImageView
        android:id="@+id/validText"
        android:layout_width="@dimen/MyDimen26dp"
        android:layout_height="@dimen/MyDimen36dp"
        android:layout_marginLeft="@dimen/MyDimen18dp"
        android:layout_marginStart="@dimen/MyDimen18dp"
        android:src="@mipmap/valid"
        app:layout_constraintBottom_toBottomOf="@+id/bottomView"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottomView" />

    <EditText
        android:id="@+id/validEditText"
        android:layout_width="@dimen/MyDimen150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/MyDimen20dp"
        android:layout_marginStart="@dimen/MyDimen20dp"
        android:background="@null"
        android:hint="@string/validToast"
        android:inputType="number"
        android:maxLength="6"
        android:textColor="@color/mainTextColor"
        android:textColorHint="@color/secondTextColor"
        android:textSize="@dimen/mainFontSize"
        app:layout_constraintBottom_toBottomOf="@+id/validText"
        app:layout_constraintLeft_toRightOf="@+id/validText"
        app:layout_constraintTop_toTopOf="@+id/validText" />

    <Button
        android:id="@+id/loginBtn"
        android:layout_width="@dimen/MyDimen0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/MyDimen15dp"
        android:layout_marginLeft="@dimen/MyDimen15dp"
        android:layout_marginRight="@dimen/MyDimen15dp"
        android:layout_marginStart="@dimen/MyDimen15dp"
        android:layout_marginTop="@dimen/MyDimen15dp"
        android:background="@drawable/btn_bg_disable"
        android:text="@string/loginBtn"
        android:textColor="@color/whiteColor"
        android:textSize="@dimen/mainFontSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bottomView" />


</android.support.constraint.ConstraintLayout>
